@model IEnumerable<Library3.Models.Authors>
@{
    ViewData["Title"] = "Index";
    @if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="row mt-lg-5">
    <div class="col-6 mt-lg-5">
        <h2>Dodaj Autora </h2>
    </div>
    <div class="col-6 text-right mt-lg-5">
        <a class="btn btn-info" asp-action="Create">Dodaj nowego autora</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sorting="@ViewData["AuthorSurname"]">@Html.DisplayNameFor(m => m.Name)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sorting="@ViewData["AuthorName"]">@Html.DisplayNameFor(m => m.Surname)</a>
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Surname)
                    </td>
                    <partial name="_TableButtonPartial" model="item.Id" />

                </tr>
            }
        </table>
    </div>
</div>