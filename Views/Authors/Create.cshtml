@model Library3.Models.Authors
@{
    ViewData["Title"] = "Create";
    @if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<div class="mt-lg-5"></div>
<h2 class="text-info mt-lg-5">Dodaj Nowego Autora </h2>
<form method="post" action="Create">
    <div class="mt-lg-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mt-lg-5">

            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-4">
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Surname"></label>
            </div>
            <div class="col-4">
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Utwórz" />
                <a asp-action="Index" class="btn btn-success">Powrót</a>
            </div>

        </div>
    </div>
</form>