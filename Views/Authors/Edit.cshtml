@model Library3.Models.Authors
@{
    ViewData["Title"] = "Edit";
    @if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<div class="mt-lg-5"></div>
<h2 class="text-info mt-lg-5">Edutuj autora </h2>
<form method="post" action="Edit">
    <div class="mt-lg-5">
        <div class="form-group row mt-lg-5">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-4">
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Aktualizuj" />
                <a asp-action="Index" class="btn btn-success">Powrót</a>
            </div>

        </div>
    </div>
</form>