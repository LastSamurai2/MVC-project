@model Library3.Models.ViewModels.BooksViewBooks
@{
    ViewData["Title"] = "Create";
    @if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="mt-lg-5"></div>
<h2 class="text-info mt-lg-5">Dodaj nową kiązke </h2>
<form method="post" action="Create">
    <div class="mt-lg-5">
        <div class="form-group row mt-lg-5">
            <div class="col-2">
                <label asp-for="Authors"></label>
            </div>
            <div class="col-4">
                <select asp-for="Books.AuthorID" asp-items="Model.CSelectListItem(Model.Authors)" class="form-control"></select>
            </div>


            <div class="col-2">
                <label asp-for="Books.Title"></label>
            </div>
            <div class="col-4">
                <input asp-for="Books.Title" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Books.Rating"></label>
            </div>
            <div class="col-4">
                <input asp-for="Books.Rating" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Utwórz" />
                <a asp-action="Index" class="btn btn-success">Powrót</a>
            </div>

        </div>
    </div>
</form>